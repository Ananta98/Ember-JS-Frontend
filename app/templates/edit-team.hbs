<GeneralContainer>
  <h1>{{if this.model.id 'Edit' 'Add'}} Team</h1>
  <form {{on "submit" this.submitTeam}}>
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="name" class="form-control" id="name" aria-describedby="name" value={{this.model.name}} {{on "input" this.updateName}} />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <input type="description" class="form-control" id="description" aria-describedby="description" value={{this.model.description}} {{on "input" this.updateDescription}} />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <LinkTo @route="index">
      <button type="button" class="btn btn-warning">Cancel</button>
    </LinkTo>
  </form>
</GeneralContainer>